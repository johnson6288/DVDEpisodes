<%= render 'header' %>
<%= render 'nav' %>
<section>
<p>
<h1>All Episodes</h1>
<center>
<table cellspacing = "0" cellpadding = "4">
	<tr>
		<th>Episode Title</th>
		<th>Show</th>
		<th>Media</th>
		<th>Disc Title</th>
		<th colspan="3">Actions</th>
	</tr>

	<% @episodes.each do |episode| %>
		<tr>
			<td><%= episode.eptitle %></td>
			<td><%= episode.show %></td>
			<td><%= episode.media %></td>
			<td><%= episode.disctitle %></td>
			<td><%= link_to 'Show', episode_path(episode) %></td>
			<td><%= link_to 'Edit', edit_episode_path(episode) %></td>
			<td><%= link_to 'Delete', episode_path(episode), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>	
</table>
</center>
</p>
<br />
</section>
<%= render 'footer' %>